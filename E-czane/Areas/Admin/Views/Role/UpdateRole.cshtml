@model UpdateRoleViewModel
@{
    ViewData["Title"] = "UpdateRole";
    Layout = "~/Views/Shared/_AdminUserLayout.cshtml";
}

<form asp-area="Admin" asp-controller="Role" asp-action="UpdateRole" method="post" class="form-horizontal ml-5 mr-5 pt-5">
    <div class="form-group row">
        <label for="inputName" class="col-sm-2 col-form-label">Name</label>
        <input asp-for="ID" type="hidden"  />
        <div class="col-sm-10">
            <input asp-for="Name"
                   type="text"
                   class="form-control"
                   placeholder="Name">
        </div>
    </div>
    <div class="form-group row">
        <div class="offset-sm-2 col-sm-10">
            <button type="submit" class="btn btn-danger  float-right">Update Role</button>
        </div>
    </div>
</form>

