@using EntityLayer.Concrete
@model List<Stock>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminUserTableLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Stock List</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Stock List</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Stock ID</th>
                                        <th>Drug ID</th>
                                        <th>Amount</th>
                                        <th>Price</th>
                                        <th>Created at</th>
                                    </tr>
                                </thead>
                                <tbody>
                                @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.id</td>
                                            <td>@item.DrugFK</td>
                                            <td>@item.amount</td>
                                            <td>@item.price$</td>
                                            <td>@item.created_at</td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Stock ID</th>
                                        <th>Drug ID</th>
                                        <th>Amount</th>
                                        <th>Price</th>
                                        <th>Created at</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>

