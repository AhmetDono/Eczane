@using EntityLayer.Concrete
@model CreateDrugViewModel
@{
    ViewData["Title"] = "CreateDrug";
    Layout = "~/Views/Shared/_AdminUserFormLayout.cshtml";
}

<div class="content-wrapper">
    <form
        asp-area="Admin"
        asp-controller="ListDrug"
        asp-action="CreateDrug"
        enctype="multipart/form-data"
        method="post"
        class="form-horizontal ml-5 mr-5 pt-5">
        <div class="form-group row">
            <div class="col-sm-10">
                <label for="inputName" class="col-sm-2 col-form-label">Drug Name</label>
                <input 
                       asp-for="Drug.drugName"
                       type="text"
                       class="form-control"
                       placeholder="Drug Name">
                <label class="col-sm-2 col-form-label"> Drug Type </label>
                <select asp-for="Drug.drugType" class="form-control">
                        <option value="Normal">Normal</option>
                        <option value="Green">Green</option>
                        <option value="Red">Red</option>
                    </select>
                <label class="col-sm-2 col-form-label">Supplier</label>
                <select asp-for="Drug.supplierFK" class="form-control">
                    <option>Please select one</option>
                    @foreach (var supplier in Model.Suppliers)
                    {
                        <option value="@supplier.id">@supplier.name</option>
                    }
                </select>
                <label for="inputName" class="col-sm-2 col-form-label">Dosage</label>
                <input asp-for="Drug.dosage"
                       type="text"
                       class="form-control"
                       placeholder="Dosage">
                <label for="inputName" class="col-sm-2 col-form-label">Description</label>
                <input
                    asp-for="Drug.description"
                    type="text"
                       class="form-control"
                       placeholder="Description">
                <label for="inputName" class="col-sm-2 col-form-label">Price</label>
                <input asp-for="Drug.price"
                       type="text"
                       class="form-control"
                       placeholder="Price">
                <label for="inputName" class="col-sm-2 col-form-label">Drug Image</label>
                <input asp-for="DrugImage"
                       type="file"
                       class="form-control"
                       placeholder="Price">
                <input
                       asp-for="Drug.created_at"
                       value="@DateTime.Now"
                       hidden />
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <button type="submit" class="btn btn-info  float-right">Add Drug</button>
            </div>
        </div>
    </form>
</div>

}