@using EntityLayer.Concrete
@model Address
@{
    ViewData["Title"] = "CreateAddress";
    Layout = "~/Views/Shared/_AdminUserFormLayout.cshtml";
}

<div class="content-wrapper">
    <form 
        asp-area="User"
        asp-controller="ListAddress"
        asp-action="CreateAddress"
        method="post"
        class="form-horizontal ml-5 mr-5 pt-5">
        <div class="form-group row">
            <div class="col-sm-10">

                <input type="hidden" asp-for="UserFK" />

                <label for="inputName" class="col-sm-2 col-form-label">Full Name</label>
                <input 
                    asp-for="FullName"
                       type="text"
                       class="form-control"
                       placeholder="Full Name">

                <label for="inputName" class="col-sm-2 col-form-label">AddressLine1</label>
                <input 
                    asp-for="AddressLine1"
                       type="text"
                       class="form-control"
                       placeholder="Address Line1">

                <label for="inputName" class="col-sm-2 col-form-label">AddressLine2</label>
                <input 
                    asp-for="AddressLine2"
                       type="text"
                       class="form-control"
                       placeholder="Address Line2">

                <label for="inputName" class="col-sm-2 col-form-label">City</label>
                <input 
                    asp-for="City"
                       type="text"
                       class="form-control"
                       placeholder="City">


                <label for="inputName" class="col-sm-2 col-form-label">State</label>
                <input 
                    asp-for="State"
                       type="text"
                       class="form-control"
                       placeholder="State">


                <label for="inputName" class="col-sm-2 col-form-label">Postal Code</label>
                <input 
                    asp-for="PostalCode"
                       type="text"
                       class="form-control"
                       placeholder="Postal Code">

                <label for="inputName" class="col-sm-2 col-form-label">Country</label>
                <input 
                    asp-for="Country"
                       type="text"
                       class="form-control"
                       placeholder="Country">

                <label for="inputName" class="col-sm-2 col-form-label">Phone Number</label>
                <input 
                    asp-for="PhoneNumber"
                       type="text"
                       class="form-control"
                       placeholder="PhoneNumber">
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <button type="submit" class="btn btn-info  float-right">Add Address</button>
            </div>
        </div>
    </form>
</div>

