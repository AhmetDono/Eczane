
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="d-lg-flex pb-5 pt-5" style="background-image: url('/pharma-master/images/hero_1.jpg');">
    <div style="background-image: url('/pharma-master/images/hero_1.jpg');"></div>
        <div class="contents order-2 order-md-1" >
            <div class="container">
                <div class="row align-items-center justify-content-center">
                <div class="col-md-7 bg-white pb-5 pt-5 pr-5 pl-5 bg-opacity-10">
                    <h3 class="text-black">Login to <strong class="text-black">E-CZANE</strong></h3>
                        <p class="mb-4 text-black">Lorem ipsum dolor sit amet elit. Sapiente sit aut eos consectetur adipisicing.</p>
                        <form action="#" method="post">
                            <div class="form-group first">
                            <label class="text-black" for="username">Username</label>
                            <input type="text" class="form-control text-black" placeholder="your-email@gmail.com" id="username">
                            </div>
                            <div class="form-group last mb-3">
                            <label class="text-black" for="password">Password</label>
                            <input type="password" class="form-control text-black" placeholder="Your Password" id="password">
                            </div>
                        <div class="d-flex mb-5 align-items-center">
                            <span class="ml-auto"><a href="/Auth/Register" class="forgot-pass text-black">Create a new Acoount</a></span>
                        </div>
                            <div class="d-flex mb-5 align-items-center">
                                <label class="control control--checkbox mb-0">
                                <span class="caption text-black ">Remember me</span>
                                    <input type="checkbox" checked="checked" />
                                    <div class="control__indicator"></div>
                                </label>
                            <span class="ml-auto"><a href="#" class="text-black">Forgot Password</a></span>
                            </div>

                            <input type="submit" value="Log In" class="btn btn-block btn-primary">

                        </form>
                    </div>
                </div>
            </div>
        </div>


    </div>
