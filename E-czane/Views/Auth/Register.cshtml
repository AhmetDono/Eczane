@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-lg-flex pb-5 pt-5" style="background-image: url('/pharma-master/images/hero_1.jpg');">
    <div style="background-image: url('/pharma-master/images/hero_1.jpg');"></div>
    <div class="contents order-2 order-md-1">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-md-7 bg-white pb-5 pt-5 pr-5 pl-5 bg-opacity-10">
                    <h3 class="text-black">Login to <strong class="text-black">E-CZANE</strong></h3>
                    <p class="mb-4 text-black">Lorem ipsum dolor sit amet elit. Sapiente sit aut eos consectetur adipisicing.</p>
                    <form asp-controller="Auth" asp-action="Register" method="post">

                        <div class="form-group first">
                            <label class="text-black" for="UserName">User Name</label>
                            <input
                                asp-for="UserName"
                                   type="text"
                                   class="form-control text-black"
                                   placeholder="your user name">
                        </div>
                        <div class="form-group first">
                            <label class="text-black" for="Email">Email</label>
                            <input
                                asp-for="Email"
                                type="email"
                                class="form-control text-black"
                                placeholder="your-email@gmail.com"
                                >
                        </div>
                        <div class="form-group last mb-3">
                            <label class="text-black" for="Password">Password</label>
                            <input
                                asp-for="Password"
                                type="password"
                                class="form-control text-black"
                                placeholder="Your Password"
                            >
                        </div>
                        <div class="form-group last mb-3">
                            <label class="text-black" for="passwordCheck">Password Check</label>
                            <input
                                asp-for="ConfirmPassword"
                                type="password"
                                class="form-control text-black"
                                placeholder="Your Password Again"
                                >
                        </div>
                        <div class="d-flex mb-5 align-items-center">
                            <span class="ml-auto"><a asp-controller="Auth" asp-action="Login" class="forgot-pass text-black">Do u have an acoount?</a></span>
                        </div>
                        <input type="submit" value="Log In" class="btn btn-block btn-primary">
                    </form>
                </div>
            </div>
        </div>
    </div>


</div>
